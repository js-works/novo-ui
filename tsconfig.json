{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "removeComments": true,
    "jsx": "react",
    "jsxFactory": "createElement",
    "preserveConstEnums": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "lib": ["ES2022", "dom"],
    "esModuleInterop": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "paths": {
      "novo-ui/ext": ["src/main/ext.ts"],
      "novo-ui/html": ["src/main/html.ts"],
      "novo-ui/jsx-runtime": ["src/main/jsx-runtime.ts"],
      "novo-ui": ["src/main/core.ts"]
    },
    "typeRoots": ["node_modules/@types"],
    "types": []
  },
  "files": ["src/main/core.ts", "src/main/ext.ts"],
  "include": ["./src/main/**/*.*", "./src/stories/**/*.*"],
  "exclude": ["node_modules"]
}
